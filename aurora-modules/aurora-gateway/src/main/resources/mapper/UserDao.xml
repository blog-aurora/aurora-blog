<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.xcye.wg.dao.UserDao">

    <resultMap id="verifyPath" type="xyz.xcye.wg.dto.SecurityUserDTO">
        <result property="password" column="password" />
        <result property="username" column="username"/>
        <result property="delete" column="is_delete"/>
        <result property="noLoginDay" column="no_login_day" javaType="_int"/>

        <association property="userAccountDO" javaType="xyz.xcye.admin.po.UserAccountDO">
            <result property="role" column="role"/>
            <result property="permission" column="permission"/>
            <result property="accountExpired" column="is_account-expired"/>
            <result property="accountLocked" column="is_account-locked"/>
        </association>
    </resultMap>

    <select id="queryUserByUsername" resultMap="verifyPath" >
        select role,permission,`is_account-locked`,`is_account-expired`,
               username,`password`,no_login_day,is_delete,
               is_verify_email
        FROM
            au_user as user,au_user_permission as user_permission
        where
            user.uid=user_permission.user_uid
        and
            user.username=#{username}
    </select>
</mapper>