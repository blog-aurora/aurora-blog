<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.xcye.file.dao.FileDao">

    <cache type="xyz.xcye.file.manager.cache.RedisCache"/>
    <insert id="insertFile"
            parameterType="xyz.xcye.common.dos.FileDO"
    >
        INSERT INTO au_file
            (uid,create_time,delete_time,file_name,size,is_delete,summary,path,storage_mode,storage_path)
        VALUES(
             #{file.uid},#{file.createTime},#{file.deleteTime},#{file.fileName},
               #{file.size},#{file.delete},#{file.summary},#{file.path},#{file.storageMode},#{file.storagePath}
            )
    </insert>

    <!--
    修改au_file的时候，因为删除状态和size的值有默认值，所以就不适用if进行判断了
    不提供修改的字段有（因为没有意义）:createdAt,size,file_name,path
    -->
    <update id="updateFile"
            parameterType="xyz.xcye.common.dos.FileDO"
            keyColumn="uid"
    >
        update au_file
            <set>
                <if test="file.deleteTime != null">
                    delete_time=#{file.deleteTime},
                </if>
                <if test="file.summary != null">
                    summary=#{file.summary},
                </if>
                is_delete=#{file.delete}
            </set>
            where uid=#{file.uid}
    </update>

    <delete id="deleteFile">
        delete from au_file where uid=#{file.uid}
    </delete>

    <select id="query" resultMap="fileResult">
        select uid,create_time,delete_time,file_name,size,is_delete,summary,path,storage_mode,storage_path from au_file
        <where>
            <if test="file.uid != null">
                uid=#{file.uid}
            </if>
            <if test="file.createTime != null">
                and create_time=#{file.createTime}
            </if>
            <if test="file.deleteTime != null">
                and delete_time=#{file.deleteTime}
            </if>
            <if test="file.fileName != null">
                and file_name like concat('%', #{file.fileName},'%')
            </if>
            <if test="file.summary != null">
                and summary like concat ('%', #{file.summary}, '%')
            </if>
            <if test="file.path != null">
                and path=#{file.path}
            </if>
            <if test="file.delete != null">
                and is_delete=#{file.delete}
            </if>
        </where>
    </select>

    <select id="queryByUid" resultMap="fileResult">
        select uid,create_time,delete_time,file_name,size,is_delete,summary,path,storage_mode,storage_path from au_file
        where uid=#{uid}
    </select>

    <resultMap id="fileResult" type="xyz.xcye.common.dos.FileDO">
        <id column="uid" property="uid"/>
        <result column="create_time" property="createTime"/>
        <result column="is_delete" property="delete"/>
        <result column="file_name" property="fileName"/>
        <result column="size" property="size"/>
        <result column="delete_time" property="deleteTime"/>
        <result column="summary" property="summary"/>
        <result column="path" property="path"/>
    </resultMap>
</mapper>