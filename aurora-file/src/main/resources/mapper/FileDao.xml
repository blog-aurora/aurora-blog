<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.xcye.file.dao.FileDao">

    <cache type="xyz.xcye.file.cache.RedisCache"/>
    <insert id="insertFile"
            parameterType="xyz.xcye.common.entity.table.File"
    >
        INSERT INTO au_file
            (uid,created_at,deleted_at,file_name,size,delete_status,summary,path,storage_mode,storage_path)
        VALUES(
             #{file.uid},#{file.createdAt},#{file.deletedAt},#{file.fileName},
               #{file.size},#{file.deleteStatus},#{file.summary},#{file.path},#{file.storageMode},#{file.storagePath}
            )
    </insert>

    <update id="updateFile"
            parameterType="xyz.xcye.common.entity.table.File"
            keyColumn="uid"
    >
        update au_file
            -- 修改au_file的时候，因为删除状态和size的值有默认值，所以就不适用if进行判断了
            /*
            不提供修改的字段有（因为没有意义）:createdAt,size,file_name,path
            */
            <set>
                <if test="file.deletedAt != null">
                    deleted_at=#{file.deletedAt},
                </if>
                <if test="file.summary != null">
                    summary=#{file.summary},
                </if>
                delete_status=#{file.deleteStatus}
            </set>
            where uid=#{file.uid}
    </update>

    <delete id="deleteFile">
        delete from au_file where uid=#{file.uid}
    </delete>

    <select id="query" resultMap="fileResult">
        select * from au_file
        <where>
            <if test="file.uid != null">
                uid=#{file.uid}
            </if>
            <if test="file.createdAt != null">
                and created_at=#{file.createdAt}
            </if>
            <if test="file.deletedAt != null">
                and deleted_at=#{file.deletedAt}
            </if>
            <if test="file.fileName != null">
                and file_name like concat('%', #{file.fileName},'%')
            </if>
            <if test="file.size != 0">
                and size=#{file.size}
            </if>
            <if test="file.summary != null">
                and summary like concat ('%', #{file.summary}, '%')
            </if>
            <if test="file.path != null">
                and path=#{file.path}
            </if>

            and delete_status=#{file.deleteStatus}
        </where>
    </select>

    <resultMap id="fileResult" type="xyz.xcye.common.entity.table.File">
        <id column="uid" property="uid"/>
        <result column="created_at" property="createdAt"/>
        <result column="delete_status" property="deleteStatus"/>
        <result column="file_name" property="fileName"/>
        <result column="size" property="size"/>
        <result column="deleted_at" property="deletedAt"/>
        <result column="summary" property="summary"/>
        <result column="path" property="path"/>
    </resultMap>
</mapper>